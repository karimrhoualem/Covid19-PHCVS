@page
@model C19VS.Pages.Variant.InsertModel
@{
}

<h1>Inserting a new Variant</h1>

<form method="post" class="mt-3">
    <input hidden asp-for="Variant.variantID" />

    <div class="form-group">
        <label asp-for="Variant.variantID">Variant ID</label>
        <div class="col-sm-10">
            <input asp-for="Variant.variantID"  />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Variant.variantName">Variant Name</label>
        <div class="col-sm-10">
            <input asp-for="Variant.variantName" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-page="/Variant/VariantIndex" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>