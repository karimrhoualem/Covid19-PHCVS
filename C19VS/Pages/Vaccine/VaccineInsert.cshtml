@page
@model C19VS.Pages.Vaccine.InsertModel
@{
}
<h1>Inserting a new Vaccine</h1>

<form method="post" class="mt-3">
    <div class="form-group">
        <label asp-for="Vaccine.vacTypeID">Vaccine ID</label>
        <div class="col-sm-10">
            <input asp-for="Vaccine.vacTypeID" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Vaccine.vacName">Vaccine Name</label>
        <div class="col-sm-10">
            <input asp-for="Vaccine.vacName" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Vaccine.dosesNeeded">Doses Needed</label>
        <div class="col-sm-10">
            <input asp-for="Vaccine.dosesNeeded" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Vaccine.approvalStatus">Approval Status</label>
        <div class="col-sm-10">
            <input asp-for="Vaccine.approvalStatus"  />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Vaccine.approvalDate">Approval Date</label>
        <div class="col-sm-10">
            <input asp-for="Vaccine.approvalDate" type="date" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Vaccine.suspensionDate">Suspension Date</label>
        <div class="col-sm-10">
            <input asp-for="Vaccine.suspensionDate" type="date"/>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-page="/Vaccine/VaccineIndex" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>