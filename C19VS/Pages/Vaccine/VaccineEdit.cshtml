@page "{vacTypeID}"
@model C19VS.Pages.Vaccine.EditModel
@{
}

<h1>Editing manager: @Model.Vaccine.vacTypeID @Model.Vaccine.vacName</h1>

<form method="post" class="mt-3">
    <input hidden asp-for="Vaccine.vacTypeID" />

    <div class="form-group">
        <label asp-for="Vaccine.vacTypeID">Vaccine ID</label>
        <div class="col-sm-10">
            <input asp-for="Vaccine.vacTypeID" placeholder="@Model.Vaccine.vacTypeID" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Vaccine.vacName">Vaccine Name</label>
        <div class="col-sm-10">
            <input asp-for="Vaccine.vacName" placeholder="@Model.Vaccine.vacName" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Vaccine.dosesNeeded">Doses Needed</label>
        <div class="col-sm-10">
            <input asp-for="Vaccine.dosesNeeded" placeholder="@Model.Vaccine.dosesNeeded" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Vaccine.approvalStatus">Approval Status</label>
        <div class="col-sm-10">
            <input asp-for="Vaccine.approvalStatus" placeholder="@Model.Vaccine.approvalStatus" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Vaccine.approvalDate">Approval Date</label>
        <div class="col-sm-10">
            <input asp-for="Vaccine.approvalDate" type="date" placeholder="@Model.Vaccine.approvalDate" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Vaccine.suspensionDate">Date of Birth</label>
        <div class="col-sm-10">
            <input asp-for="Vaccine.suspensionDate" type="date" placeholder="@Model.Vaccine.suspensionDate" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-page="/Vaccine/VaccineIndex" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>

