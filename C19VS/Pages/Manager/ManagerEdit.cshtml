@page "{facilityID}"
@model C19VS.Pages.Manager.EditModel
@{
}

<h1>Editing manager: @Model.Manager.firstName @Model.Manager.lastName manager at @Model.Manager.facilityID</h1>

<form method="post" class="mt-3">
    <input hidden asp-for="Manager.facilityID" />

    <div class="form-group">
        <label asp-for="Manager.SSN">SSN</label>
        <div class="col-sm-10">
            <input asp-for="Manager.SSN" placeholder="@Model.Manager.SSN" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Manager.EID">Employee ID</label>
        <div class="col-sm-10">
            <input asp-for="Manager.EID" placeholder="@Model.Manager.EID" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Manager.facilityID">Facility ID</label>
        <div class="col-sm-10">
            <input asp-for="Manager.facilityID" placeholder="@Model.Manager.facilityID" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Manager.firstName">First Name</label>
        <div class="col-sm-10">
            <input asp-for="Manager.firstName" placeholder="@Model.Manager.firstName" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Manager.lastName">Last Name</label>
        <div class="col-sm-10">
            <input asp-for="Manager.lastName" placeholder="@Model.Manager.lastName" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Manager.dob">Date of Birth</label>
        <div class="col-sm-10">
            <input asp-for="Manager.dob" type='date' placeholder="@Model.Manager.dob.ToString()" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Manager.telephone">Telephone</label>
        <div class="col-sm-10">
            <input asp-for="Manager.telephone" placeholder="@Model.Manager.telephone" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Manager.address">Address</label>
        <div class="col-sm-10">
            <input asp-for="Manager.address" placeholder="@Model.Manager.address" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Manager.city">city</label>
        <div class="col-sm-10">
            <input asp-for="Manager.city" placeholder="@Model.Manager.city" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Manager.province">province</label>
        <div class="col-sm-10">
            <input asp-for="Manager.province" placeholder="@Model.Manager.province" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Manager.postalCode">Postal Code</label>
        <div class="col-sm-10">
            <input asp-for="Manager.postalCode" placeholder="@Model.Manager.postalCode" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Manager.citizenship">Citizenship</label>
        <div class="col-sm-10">
            <input asp-for="Manager.citizenship" placeholder="@Model.Manager.citizenship" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Manager.email">Email</label>
        <div class="col-sm-10">
            <input asp-for="Manager.email" placeholder="@Model.Manager.email" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Manager.infected">Infected</label>
        <div class="col-sm-10">
            <input asp-for="Manager.infected" placeholder="@Model.Manager.infected" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Manager.ageGroup">Age Group</label>
        <div class="col-sm-10">
            <input asp-for="Manager.ageGroup" placeholder="@Model.Manager.ageGroup" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-page="/Manager/ManagerIndex" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>

