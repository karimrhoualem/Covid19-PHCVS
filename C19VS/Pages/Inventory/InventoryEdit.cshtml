@page
@model C19VS.Pages.Inventory.InventoryEditModel
@{
}

<h1>Editing Inventory: @Model.Inventory.inventoryID of Facility @Model.Inventory.facilityID</h1>

<form method="post" class="mt-3">

    <div class="form-group row">
        <label asp-for="Inventory.inventoryID">Inventory ID</label>
        <div class="col-sm-10">
            <input asp-for="Inventory.inventoryID" placeholder="@Model.Inventory.inventoryID" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Inventory.facilityID">Facility ID</label>
        <div class="col-sm-10">
            <input asp-for="Inventory.facilityID" placeholder="@Model.Inventory.facilityID" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Inventory.shipmentID">Shipment ID</label>
        <div class="col-sm-10">
            <input asp-for="Inventory.shipmentID" placeholder="@Model.Inventory.shipmentID" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Inventory.vacTypeID">Vaccination Type ID</label>
        <div class="col-sm-10">
            <input asp-for="Inventory.vacTypeID" placeholder="@Model.Inventory.vacTypeID" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Inventory.transferID">Transfer ID</label>
        <div class="col-sm-10">
            <input asp-for="Inventory.transferID" placeholder="@Model.Inventory.transferID" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Inventory.numberVaccine">Number of Vaccine Units Stored</label>
        <div class="col-sm-10">
            <input asp-for="Inventory.numberVaccine" placeholder="@Model.Inventory.numberVaccine" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-page="/Inventory/InventoryIndex" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>
