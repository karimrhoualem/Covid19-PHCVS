@page
@model C19VS.Pages.Inventory.InventoryInsertModel
@{
}

<h1>Inserting a new Inventory Entry</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Inventory.inventoryID">Inventory ID</label>
        <div class="col-sm-10">
            <input asp-for="Inventory.inventoryID" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Inventory.facilityID">Facility ID</label>
        <div class="col-sm-10">
            <input asp-for="Inventory.facilityID" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Inventory.shipmentID">Shipment ID</label>
        <div class="col-sm-10">
            <input asp-for="Inventory.shipmentID" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Inventory.vacTypeID">Vaccination Type ID</label>
        <div class="col-sm-10">
            <input asp-for="Inventory.vacTypeID" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Inventory.transferID">Transfer ID</label>
        <div class="col-sm-10">
            <input asp-for="Inventory.transferID"/>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Inventory.numberVaccine">Number of Vaccine Units</label>
        <div class="col-sm-10">
            <input asp-for="Inventory.numberVaccine" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-page="/Inventory/InventoryIndex" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>