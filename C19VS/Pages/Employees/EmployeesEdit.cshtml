@page "{SSN}/{EID}"
@model C19VS.Pages.Employees.EditModel
@{
}

<h1>Editing Employee: @Model.Employees.firstName @Model.Employees.lastName employee @Model.Employees.EID</h1>

<form method="post" class="mt-3">
    <input hidden asp-for="Employees.SSN" />
    <input hidden asp-for="Employees.EID" />

    <div class="form-group row">
        <label asp-for="Employees.SSN">SSN</label>
        <div class="col-sm-10">
            <input asp-for="Employees.SSN" placeholder="@Model.Employees.SSN" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Employees.EID">Employee ID</label>
        <div class="col-sm-10">
            <input asp-for="Employees.EID" placeholder="@Model.Employees.EID" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Employees.firstName">First Name</label>
        <div class="col-sm-10">
            <input asp-for="Employees.firstName" placeholder="@Model.Employees.firstName" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Employees.lastName">Last Name</label>
        <div class="col-sm-10">
            <input asp-for="Employees.lastName" placeholder="@Model.Employees.lastName" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Employees.dob">Date of Birth</label>
        <div class="col-sm-10">
            <input asp-for="Employees.dob" placeholder="@Model.Employees.dob.ToString()" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Employees.telephone">Telephone</label>
        <div class="col-sm-10">
            <input asp-for="Employees.telephone" placeholder="@Model.Employees.telephone" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Employees.address">Address</label>
        <div class="col-sm-10">
            <input asp-for="Employees.address" placeholder="@Model.Employees.address" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Employees.city">city</label>
        <div class="col-sm-10">
            <input asp-for="Employees.city" placeholder="@Model.Employees.city" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Employees.province">province</label>
        <div class="col-sm-10">
            <input asp-for="Employees.province" placeholder="@Model.Employees.province" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Employees.postalCode">Postal Code</label>
        <div class="col-sm-10">
            <input asp-for="Employees.postalCode" placeholder="@Model.Employees.postalCode" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Employees.citizenship">Citizenship</label>
        <div class="col-sm-10">
            <input asp-for="Employees.citizenship" placeholder="@Model.Employees.citizenship" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Employees.email">Email</label>
        <div class="col-sm-10">
            <input asp-for="Employees.email" placeholder="@Model.Employees.email" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Employees.infected">Infected</label>
        <div class="col-sm-10">
            <input asp-for="Employees.infected" placeholder="@Model.Employees.infected" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Employees.ageGroup">Age Group</label>
        <div class="col-sm-10">
            <input asp-for="Employees.ageGroup" placeholder="@Model.Employees.ageGroup" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-page="/Employees/EmployeesIndex" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>

