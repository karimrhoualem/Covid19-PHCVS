@page "{shipmentID}"
@model C19VS.Pages.Shipment.ShipmentEditModel
@{
}

<h1>Editing: @Model.Shipment.shipmentID</h1>

<form method="post" class="mt-3">
    <input hidden asp-for="Shipment.shipmentID"/>

    <div class="form-group">
        <label asp-for="Shipment.shipmentID">shipmentID</label>
        <div class="col-sm-10">
            <input asp-for="Shipment.shipmentID" placeholder="@Model.Shipment.shipmentID" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Shipment.VacTypeID">VacTypeID</label>
        <div class="col-sm-10">
            <input asp-for="Shipment.VacTypeID" placeholder="@Model.Shipment.VacTypeID" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Shipment.facilityID">facilityID</label>
        <div class="col-sm-10">
            <input asp-for="Shipment.facilityID" placeholder="@Model.Shipment.facilityID" />
        </div>
    </div>

    <div class="form-group ">
        <label asp-for="Shipment.receptionDate">receptionDate</label>
        <div class="col-sm-10">
            <input asp-for="Shipment.receptionDate" type="date" placeholder="@Model.Shipment.receptionDate" />
        </div>
    </div>

    <div class="form-group ">
        <label asp-for="Shipment.numberVaccine">numberVaccine</label>
        <div class="col-sm-10">
            <input asp-for="Shipment.numberVaccine" placeholder="@Model.Shipment.numberVaccine.ToString()" />
        </div>
    </div>

    <div class="form-group ">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-page="/Shipment/ShipmentIndex" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>