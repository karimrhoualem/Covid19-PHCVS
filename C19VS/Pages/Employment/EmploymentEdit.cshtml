@page "{contractNum}"
@model C19VS.Pages.Employment.EditModel
@{
}

<h1>Editing employment contract: @Model.Employment.contractNum</h1>

<form method="post" class="mt-3">
    <input hidden asp-for="Employment.contractNum" />

    <div class="form-group">
        <label asp-for="Employment.contractNum">Contract Number</label>
        <div class="col-sm-10">
            <input asp-for="Employment.contractNum" placeholder="@Model.Employment.contractNum" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Employment.EID">Employee ID</label>
        <div class="col-sm-10">
            <input asp-for="Employment.EID" placeholder="@Model.Employment.EID" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Employment.facilityID">Facility ID</label>
        <div class="col-sm-10">
            <input asp-for="Employment.facilityID" placeholder="@Model.Employment.facilityID" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Employment.startDate">Start Date</label>
        <div class="col-sm-10">
            <input asp-for="Employment.startDate" type='date' placeholder="@Model.Employment.startDate.ToString()" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Employment.endDate">End Date</label>
        <div class="col-sm-10">
            <input asp-for="Employment.endDate" type='date' placeholder="@Model.Employment.endDate.ToString()" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-page="/Employment/EmploymentIndex" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>

