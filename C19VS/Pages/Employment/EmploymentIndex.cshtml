@page
@model C19VS.Pages.Employment.IndexModel
@{
    ViewData["Title"] = Model.TABLE_NAME;
}

<div>
    <h1>Table: @Model.TABLE_NAME</h1>
    <hr />
    <a asp-page="/Employment/EmploymentInsert" class="btn btn-primary">Insert New @Model.TABLE_NAME</a>
    <hr />
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                @foreach (var column in Model.tableList[0])
                {
                    <th>@column</th>
                }
                <th>Edit/Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var row in Model.tableList.Skip(1))
            {
                <tr>
                    @foreach (var column in row)
                    {
                        <td>@column</td>
                    }
                    <td>
                        <span style="display: inline;">
                            <a asp-page="/Employment/EmploymentEdit" asp-route-contractNum="@row[0]" class="btn btn-primary">Edit</a>
                            <a asp-page="/Employment/EmploymentDelete" asp-route-contractNum="@row[0]" class="btn btn-danger">Delete</a>
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>