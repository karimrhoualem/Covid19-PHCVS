@page "{SSN}/{infectionDate}"
@model C19VS.Pages.Infection.EditModel
@{
}

<h1>Editing Infection:of person @Model.Infection.SSN on @Model.Infection.infectionDate.ToShortDateString() </h1>

<form method="post" class="mt-3">
    <input hidden asp-for="Infection.SSN" />
    <input hidden asp-for="Infection.infectionDate" />

    <div class="form-group">
        <label asp-for="Infection.SSN">SSN</label>
        <div class="col-sm-10">
            <input asp-for="Infection.SSN" placeholder="@Model.Infection.SSN" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Infection.infectionDate">Infection Date</label>
        <div class="col-sm-10">
            <input asp-for="Infection.infectionDate" type = "date" placeholder="@Model.Infection.infectionDate" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Infection.variantID">Variant ID</label>
        <div class="col-sm-10">
            <input asp-for="Infection.variantID" placeholder="@Model.Infection.variantID" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-page="/Infection/InfectionIndex" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>

